FROM ubuntu:19.10

RUN apt-get update && \
    apt-get install -y software-properties-common && \
    add-apt-repository ppa:freeradius/stable-3.0 && \
    apt-get update && \
    apt-get install -y freeradius

USER freerad:freerad

EXPOSE \
    1812/udp \
    1813/udp \
    18120

CMD ["freeradius", "-fxx", "-l", "stdout"]